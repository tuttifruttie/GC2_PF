#version 400

// INPUT VARIABLES //
in vec2 texCoord;
in vec3 normal;

// OUTPUT VARIABLES //
out vec4 outputColor;

// UNIFORM VARIABLES //
uniform sampler2D textura;
uniform vec3 lightDirection;
uniform vec4 diffuseLightColor;

void main(void)
{
	vec4 textureColor = texture(textura, texCoord);	


	outputColor = textureColor * diffuseLightColor;
}